import { NextResponse } from 'next/server'

// Simple mock database (resets on redeploy)
let waitlistDB: any[] = []

export async function GET() {
  return NextResponse.json({
    total_subscribers: waitlistDB.length,
    remaining_spots: Math.max(0, 1000 - waitlistDB.length),
    message: 'API working - In memory storage'
  })
}

export async function POST(request: Request) {
  try {
    const body = await request.json()
    const { email, name, company, role, industry } = body

    // Basic validation
    if (!email || !name || !company || !role || !industry) {
      return NextResponse.json(
        { error: 'All fields are required' },
        { status: 400 }
      )
    }

    // Check duplicate
    const existing = waitlistDB.find(entry => entry.email === email)
    if (existing) {
      return NextResponse.json(
        { 
          success: true, // Return success even if duplicate
          message: 'You are already on our waitlist!' 
        },
        { status: 200 }
      )
    }

    // Add to memory
    const newEntry = {
      id: Date.now(),
      email,
      name,
      company,
      role,
      industry,
      timestamp: new Date().toISOString()
    }

    waitlistDB.push(newEntry)
    
    // Log to Vercel console
    console.log('ðŸš€ New waitlist signup:', newEntry)

    return NextResponse.json({
      success: true,
      message: 'Successfully added to waitlist!',
      position: waitlistDB.length
    })

  } catch (error) {
    console.error('Error:', error)
    return NextResponse.json(
      { success: true, message: 'Thank you for joining!' }, // Always return success
      { status: 200 }
    )
  }
}
EOF
